# Base Framework MCP Server Configuration
# Copy this file to .env and modify as needed

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# HTTP Port for SSE server (when deployed to cloud)
# Leave empty for local stdio MCP mode
# PORT=8080

# Base URL for the deployed server (used for SSE endpoint)
# Only needed when PORT is set
# BASE_URL=https://mcp.base.al

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================

# Caprover deployment settings
# CAPROVER_URL=your-caprover-instance.com
# APP_NAME=base-mcp

# Custom domain for MCP server
# DOMAIN=mcp.base.al

# ==============================================================================
# DOCUMENTATION CONFIGURATION
# ==============================================================================

# Enable/disable documentation HTTP routes on same server (default: true)
# ENABLE_DOCS=true

# Path to markdown documentation directory
# Defaults to ./md/docs/
# DOCS_PATH=./md/docs

# Enable documentation caching (for performance)
# CACHE_DOCS=true

# Documentation cache TTL in seconds
# CACHE_TTL=3600

# ==============================================================================
# DEBUGGING & LOGGING
# ==============================================================================

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Enable verbose MCP protocol logging
# MCP_DEBUG=false

# Enable file operation logging
# FILE_DEBUG=false

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Enable development mode (more verbose logging)
# DEV_MODE=false

# Watch markdown files for changes (auto-reload)
# WATCH_FILES=false

# ==============================================================================
# SECURITY SETTINGS (for remote deployment)
# ==============================================================================

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://claude.ai,https://windsurf.ai

# API rate limiting (requests per minute)
# RATE_LIMIT=100

# Enable authentication (for premium deployment)
# ENABLE_AUTH=false
# AUTH_TOKEN=your-secret-token

# ==============================================================================
# EXAMPLE CONFIGURATIONS
# ==============================================================================

# Local development (stdio mode - default)
# No environment variables needed

# Local HTTP testing
# PORT=8080
# BASE_URL=http://localhost:8080
# ENABLE_DOCS=true

# Caprover deployment
# PORT=80
# BASE_URL=https://mcp.base.al
# ENABLE_DOCS=true

# Heroku deployment
# PORT=80
# BASE_URL=https://base-framework-mcp.herokuapp.com
# ENABLE_DOCS=false

# Docker deployment
# PORT=8080
# BASE_URL=https://your-domain.com
# ENABLE_DOCS=true

# Development with file watching
# DEV_MODE=true
# WATCH_FILES=true
# LOG_LEVEL=debug
# ENABLE_DOCS=true